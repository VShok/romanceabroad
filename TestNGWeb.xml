<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Web Test Suite" parallel="none" >



    <test name="ChromeTestCases">
        <parameter name="version" value="66.0"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="testBox" value="web"/>
        <parameter name="platform" value="Mac"/>
        <parameter name="testEnv" value="prod"/>

        <groups>
            <run>
                <include name = "user"    />
                <include name = "admin"    />
            </run>
        </groups>

        <classes>

            <class name ="com.romanceabroad.ui.GiftsTests">
                <methods>
                    <include name = ".*Link" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.BlogTests">
                <methods>
                    <include name = ".*Link" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.HowWeWorkTests">
                <methods>
                    <include name = ".*Link" />
                    <include name = ".*Title.*" />
                    <include name = ".*Content.*" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.MainTests">
                <methods>
                    <include name = ".*Play.*" />
                    <include name = ".*Count.*" />
                    <include name = ".*Main.*" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.PhotosTests">
                <methods>
                    <include name = ".*Link" />
                    <include name = ".*Add.*" />
                    <include name= ".*Tabs" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.PrettyWomenTests">
                <methods>
                    <include name = ".*Link" />
                    <include name = ".*Search.*" />
                    <include name = ".*Third.*" />
                    <include name = ".*Results" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.SignInTests">
                <methods>
                    <include name = ".*Link" />
                    <include name=".*Neg" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.ContactUsTests">
                <methods>
                    <include name = ".*ContactUs.*" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.TourToUkraineTests">
                <methods>
                    <include name = ".*Link" />
                </methods>
            </class>
            <class name ="com.romanceabroad.ui.RegistrationTests">
                <methods>
                    <include name = ".*FillIn.*" />
                </methods>
            </class>
    </classes>
</test>

